{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/pure-min.css', 100) %}
        {% do assets.addCss('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css', 99) %}
        {% do assets.addCss('theme://css/uikit.min.css', 98) %}
        {% do assets.addCss('theme://css/custom.css', 97) %}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('theme://js/uikit.min.js', 100) %}
        {% do assets.addJs('theme://js/uikit-icons.min.js', 99) %}
    {% endblock %}
    {{ assets.js() }}

{% endblock head%}
</head>
<body id="top" class="{{ page.header.body_classes }}">
    <div class="uk-container uk-margin-top uk-margin-large-bottom">
        {% block header %}
            <div class="header">
                <div class="wrapper padding">
                    {% block header_navigation %}
                    <div class="tm-navbar uk-navbar-container">
                        <div class="uk-container">
                            <nav class="uk-navbar" uk-navbar>
                                <div class="uk-navbar-left">
                                    <a class="uk-navbar-item uk-logo uk-visible@m" href="{{ base_url == '' ? '/' : base_url }}">{{ config.site.title }}</a>
                                </div>

                                <div class="uk-navbar-center uk-hidden@m">
                                    <a class="uk-navbar-item uk-logo" href="{{ base_url == '' ? '/' : base_url }}">
                                        <img src="images/logo_uikit.svg" width="90" height="30" title="UIkit" alt="UIkit">
                                    </a>
                                </div>

                                <div class="uk-navbar-right">
                                    <div class="uk-visible@m">
                                        {% include 'partials/navigation.html.twig' with { variant: 'navbar' } %}
                                    </div>
                                    <a class="uk-navbar-toggle uk-hidden@m" href="#tm-offcanvas" uk-toggle="target: #tm-offcanvas">
                                        <span uk-navbar-toggle-icon></span>
                                        <span class="uk-margin-small-left">{{ 'THEME_UKIT.NAVIGATION_TOGGLE'|t ?: 'Menu' }}</span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </div>
                    <div id="tm-offcanvas" uk-offcanvas="overlay: true">
                        <div class="uk-offcanvas-bar">
                            <button class="uk-offcanvas-close" type="button" uk-close></button>
                            <a class="uk-logo uk-margin-bottom" href="{{ base_url == '' ? '/' : base_url }}">{{ config.site.title }}</a>
                            {% include 'partials/navigation.html.twig' with { variant: 'offcanvas' } %}
                        </div>
                    </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}

        {% block body %}
            <section id="body" class="uk-grid" uk-grid>
                <div class="wrapper padding">
                {% block content %}{% endblock %}
                </div>
            </section>
        {% endblock %}

        {% block footer %}
            <div class="footer text-center">
                <div class="wrapper padding">
                    <p class="uk-text-center"><a href="http://getgrav.org">Grav</a> was <i class="fa-solid fa-code"></i> with <i class="fa-solid fa-heart"></i> by <a href="http://www.rockettheme.com">RocketTheme</a>.</p>
                </div>
            </div>
        {% endblock %}

        {% block bottom %}
            {{ assets.js('bottom') }}
        {% endblock %}
    </div>
</body>
</html>
